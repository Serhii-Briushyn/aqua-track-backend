                    },
                    "message": {
                      "type": "string",
                      "example": "Users count retrieved successfully."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "userCount": {
                          "type": "integer",
                          "example": 12345
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
